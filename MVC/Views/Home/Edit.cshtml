@model Domain.Models.ToDoItem?
@{
    ViewData["Title"] = "Edit item";
}
<style>
    .form-row {
        margin: 10px 0;
    }
</style>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-row">
        @Html.TextBoxFor(m => m.Text)
    </div>
    <div class="form-row">
        @Html.CheckBoxFor(m => m.IsCompleted) @Html.Label("Завершено")
    </div>
    <input type="submit" value="Сохранить" />
}

 